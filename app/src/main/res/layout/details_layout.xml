<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100"
        android:background="@color/black">

        <ImageView
            android:id="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/size_98"
            android:layout_height="@dimen/size_39"
            android:layout_marginTop="@dimen/size_23"
            android:background="@color/red"
            android:src="@drawable/marvel_logo" />

        <ImageView
            android:id="@+id/ivIconBackDetails"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_width="@dimen/size_18"
            android:layout_height="@dimen/size_25"
            android:layout_marginLeft="@dimen/size_24"
            android:src="@drawable/ic_icon_back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivCharacterDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        android:layout_width="@dimen/size_375"
        android:layout_height="@dimen/size_375"
        android:background="@color/white"
        android:foregroundGravity="right" />

    <ImageView
        app:layout_constraintBottom_toBottomOf="@+id/ivCharacterDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/transparence_details" />

    <TextView
        android:id="@+id/tvNameCharacterDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCharacterDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_28"
        android:fontFamily="@font/roboto"
        android:text="@string/name"
        android:textColor="@color/white"
        android:textSize="@dimen/size_28"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNameCharacterDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_28"
        android:layout_marginTop="@dimen/size_24"
        android:fontFamily="@font/roboto"
        android:text="@string/descriptionTitle"
        android:textColor="@color/white"
        android:textSize="@dimen/size_18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescriptionDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/size_24"
        android:gravity="top"
        android:lineSpacingExtra="@dimen/size_4"
        android:padding="@dimen/size_24"
        android:text="@string/description"
        android:textColor="@color/white"
        android:textSize="@dimen/size_15"
        android:translationY="-1.8sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
